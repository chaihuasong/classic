<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.example.elvin.htzclassic.MainActivity">

   <android.support.v4.view.ViewPager
       android:id="@+id/viewpager"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/jptabbar">
   </android.support.v4.view.ViewPager>

   <com.jpeng.jptabbar.JPTabBar
       android:id="@+id/jptabbar"
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:layout_alignParentBottom="true"
       android:background="@color/bk"
       app:TabMiddleView="@layout/middle_button"
       app:TabMiddleHMargin="30dp"
       app:TabMiddleBottomDis="7dp"
       app:TabMargin="4dp"
       app:TabIconSize="30dp"
       app:TabTextSize="9sp"
       app:TabNormalColor="#8a8a8a"
       app:TabSelectColor="@android:color/holo_red_light">
   </com.jpeng.jptabbar.JPTabBar>

</RelativeLayout>
